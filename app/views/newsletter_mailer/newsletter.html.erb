<table cellpadding="0" cellspacing="0" border="0" width="100%" style="min-width: 340px; font-size: 18px; line-height: normal;">
  <tr>
    <td style="padding-left: 6%;">
      Dear <%= @user.name %>,
    </td>
  </tr>
  <tr>
    <td style="padding: 0px 0px 30px 6%; font-size: 16px;">
      <%= @newsletter.description %>
    </td>
  </tr>
</table>
<table cellpadding="0" cellspacing="0" border="0" width="100%" style="min-width: 340px; font-size: 1px; line-height: normal;">
  <tr>
    <td align="center" valign="top">
      <%- @newsletter.newsletter_items.each do |newsletter_item| %>
        <%= render partial: "/email/elements/#{newsletter_item.display}", locals: { newsletter_item: newsletter_item } %>
      <% end %>
    </td>
  </tr>
</table>
